<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="startIconTint">@color/gray</item>
        <item name="endIconTint">@color/gray</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/blue</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/yellow</item>
    </style>

    <style name="Widget.App.FilterButton" parent="Widget.Material3.Button">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">#8D8D8D</item>
    </style>

    <style name="Widget.App.Button.Primary" parent="Widget.App.Button">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.App.Button">
        <item name="android:textColor">@color/gray</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Widget.App.LogoutButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="icon">@drawable/ic_logout</item>
        <item name="iconTint">@color/gray</item>
    </style>

    <style name="TextAppearance.App.MainName" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.App.ActionCardView" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/action_card_corner_radius</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemIconTint">@color/selector_nav_bar_item</item>
        <item name="itemTextColor">@color/selector_nav_bar_item</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="itemPaddingBottom">24dp</item>
        <item name="itemPaddingTop">16dp</item>
        <item name="itemRippleColor">@color/selector_nav_bar_ripple</item>
    </style>

    <style name="Widget.App.MapIconButton" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/gray</item>
        <item name="iconSize">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/selector_map_icon_button_container</item>
    </style>

    <style name="Widget.App.MapIconButton.Square" parent="Widget.App.MapIconButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <style name="TextAppearance.App.ToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextAppearance.App.ProfileDetails" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#4F4F4F</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">#E6716F</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="materialCalendarHeaderLayout">
            @style/App.Material3.MaterialCalendar.HeaderLayout
        </item>
        <item name="materialCalendarHeaderTitle">@style/App.Material3.MaterialCalendar.HeaderTitle
        </item>
        <item name="materialCalendarHeaderSelection">
            @style/App.Material3.MaterialCalendar.HeaderSelection
        </item>
        <item name="materialCalendarHeaderToggleButton">
            @style/App.Material3.MaterialCalendar.HeaderToggleButton
        </item>
    </style>

    <style name="App.Material3.MaterialCalendar.HeaderLayout" parent="@style/Widget.Material3.MaterialCalendar.HeaderLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="App.Material3.MaterialCalendar.HeaderTitle" parent="@style/Widget.Material3.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="App.Material3.MaterialCalendar.HeaderSelection" parent="@style/Widget.Material3.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="App.Material3.MaterialCalendar.HeaderToggleButton" parent="@style/Widget.Material3.MaterialCalendar.HeaderToggleButton">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="FilterCardViewLeft" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.CutRight</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.CutRight" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="FilterCardViewRight" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.CutLeft</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.CutLeft" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>
</resources>
