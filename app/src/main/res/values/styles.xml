<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="boxStrokeColor">@color/selector_input_stroke</item>
        <item name="startIconTint">?attr/colorOnSurface</item>
        <item name="endIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.App.ActionCardView" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/action_card_corner_radius</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>
</resources>
