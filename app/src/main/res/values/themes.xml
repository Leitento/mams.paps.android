<resources>

    <style name="Base.Theme.MamsPaps" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="borderlessButtonStyle">@style/Widget.App.Button.TextButton</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.MamsPaps" parent="Base.Theme.MamsPaps">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#fbfe46</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#fbfe46</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.MamsPaps.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.MamsPaps</item>
    </style>
</resources>
