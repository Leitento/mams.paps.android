<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.SecondOnboardingFragment"
    tools:ignore="MissingClass">

    <ImageView
        android:id="@+id/second_screen_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/second_screen_onb"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/dots_state_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/second_screen_image"
        tools:layout_editor_absoluteX="171dp"
        android:src="@drawable/dots_state_second"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_second_screen"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/text_second_screen"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/dots_state_second"
        tools:layout_editor_absoluteX="116dp"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.utils.widget.MotionButton
        android:id="@+id/button_to_third_screen"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="44dp"
        android:background="@drawable/button_background"
        android:text="@string/button_next"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
