<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@android:color/transparent"
    android:background="@drawable/rounded_border"
    android:padding="18dp">

        <TextView
            android:id="@+id/profile_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="6dp"
            android:text="@string/profile_add_photo"
            android:textColor="#363636"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_add_photo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@color/light_blue" />

        <TextView
            android:id="@+id/profile_change_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:drawablePadding="6dp"
            android:text="@string/profile_change_photo"
            android:textColor="#363636"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_change_photo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@color/light_blue" />

        <TextView
            android:id="@+id/profile_delete_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:drawablePadding="6dp"
            android:text="@string/profile_delete_photo"
            android:textColor="#363636"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_delete_photo" />
</LinearLayout>